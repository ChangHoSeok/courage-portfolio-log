<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
           "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
           "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- Templates -->
	<definition name="layout.default" template="/WEB-INF/tiles/layout/default/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/tiles/layout/default/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/WEB-INF/tiles/layout/default/footer.jsp" />
	</definition>

	<!-- Pages -->
	<definition name="*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp" />
	</definition>
	<definition name="*/*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}.jsp" />
	</definition>
	<definition name="*/*/*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}.jsp" />
	</definition>
	<definition name="*/*/*/*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}/{4}.jsp" />
	</definition>
	<definition name="*/*/*/*/*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}/{4}/{5}.jsp" />
	</definition>
	<definition name="*/*/*/*/*/*.default.tiles" extends="layout.default">
		<put-attribute name="body" value="/WEB-INF/jsp/{1}/{2}/{3}/{4}/{5}/{6}.jsp" />
	</definition>
</tiles-definitions>